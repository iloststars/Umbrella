<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:ignore="UseSwitchCompatOrMaterialXml">
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/logo"
        android:visibility="visible"/>
    <LinearLayout
        android:id="@+id/float_menu"
        android:alpha="0.8"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#3C3636"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="Umbrella"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:background="@color/red"/>
            <TextView
                android:id="@+id/btn_menu_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="x"
                android:gravity="center_horizontal"
                android:textColor="@color/red"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <Switch
                android:id="@+id/switch_run"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/SwitchTheme"
                android:text="开启"/>

            <Switch
                android:id="@+id/switch_ray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/SwitchTheme"
                android:checked="true"
                android:text="射线"/>
            <Switch
                android:id="@+id/switch_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/SwitchTheme"
                android:checked="true"
                android:text="方框"/>
            <Switch
                android:id="@+id/switch_buff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/SwitchTheme"
                android:checked="true"
                android:text="BUFF"/>
            <Switch
                android:id="@+id/switch_animal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/SwitchTheme"
                android:checked="true"
                android:text="野怪"/>
            <Switch
                android:id="@+id/switch_soldier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/SwitchTheme"
                android:checked="true"
                android:text="兵线"/>
            <Switch
                android:id="@+id/switch_cd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/SwitchTheme"
                android:checked="true"
                android:text="技能CD"/>
            <Switch
                android:id="@+id/switch_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/SwitchTheme"
                android:text="共享"/>
            <Switch
                android:id="@+id/switch_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/SwitchTheme"
                android:text="防录屏"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="小地图左右"/>
            <SeekBar
                android:id="@+id/seekbarX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="500"
                android:progress="250"
                android:theme="@style/SeekbarTheme"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="小地图上下"/>
            <SeekBar
                android:id="@+id/seekbarY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="500"
                android:progress="250"
                android:theme="@style/SeekbarTheme"/>



        </LinearLayout>

    </LinearLayout>
</LinearLayout>